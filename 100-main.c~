#include <stdio.h>
#include <stdlib.h>
#include "sort.h"

/**
 * main - Entry point
 *
 * Return: Always 0
 */
int main() {
    int arr[] = {12, 34, 54, 2, 3};
    size_t size = sizeof(arr) / sizeof(arr[0]);

    printf("Original array: ");
    print_array(arr, size);

    printf("\nShell sort steps:\n");
    shell_sort(arr, size);

    printf("\nSorted array: ");
    print_array(arr, size);

    return 0;
}
